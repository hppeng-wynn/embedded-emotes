{

    "manifest_version": 2,
    "name": "Embedded Emotes",
    "version": "1.0.1",
  
    "description": "Poor man's cross-server discord emotes, or a fancier permanent clipboard.",

    "icons": {
        "48": "icon.png"
    },
  
    "background": {
        "scripts": [
            "ctxmenu.js"
        ]
    },

    "permissions": [
        "menus",
        "tabs",
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "storage",
        "unlimitedStorage"
    ]
}
  